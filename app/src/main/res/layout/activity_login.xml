<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:gravity="center"
    tools:context="hub.herb.LoginActivity">
    <TextView
        android:gravity="center"
        android:id="@+id/et_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="USER LOGIN"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/keyhole"
        android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
 >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <EditText
                    android:id="@+id/et_stuNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="학번"
                    android:background="@null"
                    android:inputType="number" />
                <View
                    android:id="@+id/UnderLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/et_stuNumber"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#dbebc6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <EditText
                    android:id="@+id/passwwordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@null"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
/>
                <View
                    android:id="@+id/UnderLine_pass"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/passwwordText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#dbebc6" />
            </LinearLayout>


        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="login"
            android:text="LOGIN"
            android:textSize="20dp"
            android:background="@drawable/uti"
            />
        </LinearLayout>
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="register"
        android:textSize="15dp"
        android:text="회원가입"

        android:background="#00ff0000"
        />
<!--
    <Button
        android:id="@+id/btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="test"
        android:text="테스트" />-->
</LinearLayout>